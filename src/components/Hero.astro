---
interface Props {
  title: string;
  description: string;
}

import Button from "./common/Button.astro";

const { title, description } = Astro.props;
---

<article>
  <h1 class="titles">{title}</h1>
  <p class="descriptions">{description}</p>

  <div>
    <Button title="Download for iOS" backgroundColor="--Strong-Cyan" />
    <Button title="Download for Mac" backgroundColor="--Light-Blue" />
  </div>
</article>

<style>
  article {
    text-align: center;
  }

  h1 {
    font-size: 30px;

    @media (width >= 1024px) {
      font-size: 2.65rem;
    }
  }

  p {
    margin-top: 24px;
    font-size: 16.1px;
    line-height: 26px;

    @media (width >= 1024px) {
      max-width: 680px;
      font-size: 1.2rem;
      margin: 28px auto 0;
      line-height: 28px;
    }
  }

  div {
    display: flex;
    flex-direction: column;
    gap: 24px;
    margin-top: 50px;

    @media (width >= 1024px) {
      flex-direction: row;
      justify-content: center;
      gap: 26px;
      margin-top: 48px;
    }
  }
</style>
