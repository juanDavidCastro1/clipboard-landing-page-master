---
interface Props {
  title: string;
  backgroundColor: string;
}

const { title, backgroundColor } = Astro.props;
---

<button style={`background-color: var(${backgroundColor});`}>
  {title}
</button>

<style>
  button {
    width: 312px;
    height: 54px;
    border-radius: 24px;
    color: white;
    font-size: 20px;
    font-weight: 600;
    cursor: pointer;

    &:hover {
      opacity: 0.7;
    }

    @media (width >= 1024px) {
      width: 228px;
      height: 56px;
    }
  }
</style>
